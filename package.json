{
  "name": "@nfsmonstr/react-native-splash-screen",
  "version": "4.1.1",
  "description": "A splash screen for react-native, hide when application loaded ,it works on iOS and Android. Fork of https://github.com/crazycodeboy/react-native-splash-screen.git",
  "main": "./src/index.ts",
  "types": "./src/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "release-it --only-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NFSMONSTR/react-native-splash-screen.git"
  },
  "keywords": [
    "react-native",
    "react-native-component",
    "react-native-splash-screen",
    "splash-screen",
    "splashscreen",
    "splash",
    "launch-screen",
    "launchscreen",
    "android",
    "ios"
  ],
  "files": [
    "src",
    "android",
    "ios",
    "react-native-splash-screen.podspec"
  ],
  "author": "NFS_MONSTR <nfsmonstr@gmail.com> (https://github.com/NFSMONSTR)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NFSMONSTR/react-native-splash-screen/issues"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "homepage": "https://github.com/NFSMONSTR/react-native-splash-screen#readme",
  "codegenConfig": {
    "name": "RNSplashScreenSpec",
    "type": "all",
    "jsSrcsDir": "src",
    "outputDir": {
      "ios": "ios/generated",
      "android": "android/generated"
    },
    "android": {
      "javaPackageName": "org.devio.rn.splashscreen"
    }
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "release-it": "^19.0.5"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  }
}
